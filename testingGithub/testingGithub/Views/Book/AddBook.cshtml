                    <option value = "">Please Choose Language</option>
                    
                </select>
                <span asp-validation-for = "MultiLanguage"></span>
            </div>*@



            <div class = "form-group">
                <input type = "submit" value = "Submit Data" class = "btn btn-primary"/>
            </div>

            <br /><br />
            <br />
            <br />
           

            

        </form>


    </div>

</div>


