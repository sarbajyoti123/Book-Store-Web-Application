            <span class="sr-only">Loading...</span>
          </div>
        </div>
*@

        
        @*<form method = "post" asp-controller = "Book" asp-action = "AddBook" data-ajax=true data-ajax-begin = "beginajax" data-ajax-complete = "completeajax" data-ajax-success = "successajax" data-ajax-failure = "failureajax" data-ajax-loading = "#loader">*@
        <form method = "post" asp-controller = "Book" asp-action = "AddBook" enctype = "multipart/form-data">
            <div class = "form-group">
                <label asp-for = "Title">Title</label>
                <input asp-for = "Title" class = "form-control" />
                <span asp-validation-for = "Title"></span>
            </div>
            
            <div class = "form-group">
                <label asp-for = "Author">Author</label>
                <input asp-for = "Author" class = "form-control"/>
                <span asp-validation-for = "Author"></span>
            </div>

            <div class = "form-group">
                
                <label asp-for = "Description">Description</label>
                <input asp-for = "Description" class = "form-control"/>
                <span asp-validation-for = "Description"></span>
            </div>

            <div class = "form-group">
                <label asp-for = "Category">Category</label>
                <input asp-for = "Category" class = "form-control"/>
                <span asp-validation-for = "Category"></span>
            </div>
            
            <div class = "form-group">
                 <label asp-for = "TotalPages">TotalPages</label>
                <input asp-for = "TotalPages" class = "form-control" required/>
                <span asp-validation-for = "TotalPages"></span>
            </div>

           
            @*Client Side Dropdown*@
            @*<div class = "form-group">
                 <label asp-for = "Language">Language</label>
                <select asp-for = "Language" class = "form-control" required>
                    <option value = "">Please Choose Language</option>
                    <option>English</option>
                    <option>Bengali</option>
