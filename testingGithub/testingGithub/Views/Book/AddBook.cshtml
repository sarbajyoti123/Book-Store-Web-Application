            </div>*@

            <div class = "form-group">
                 <label asp-for = "Language">Language</label>
                <select asp-for = "Language" class = "form-control" required asp-items = "ViewBag.items" >
                    <option value = "">Please Choose Language</option>
                    
                </select>
                <span asp-validation-for = "Language"></span>
            </div>


             <div class = "form-group">
                 <label asp-for = "CoverPhoto">Cover Photo</label>                
                 <div class="custom-file">
                  <input asp-for = "CoverPhoto" class="custom-file-input" id="customFile">
                  <label class="custom-file-label" for="customFile">Choose file</label>
                </div>

                <span asp-validation-for = "CoverPhoto"></span>
            </div>

            

            <div class = "form-group">
                 <label asp-for = "GalleryFiles">Gallery Files</label>                
                 <div class="custom-file">
                  <input asp-for = "GalleryFiles" class="custom-file-input" id="customFile">
                  <label class="custom-file-label" for="customFile">Choose file</label>
                </div>

                <span asp-validation-for = "GalleryFiles"></span>
            </div>


            @*<div class = "form-group">
                 <label asp-for = "MultiLanguage">MultiLanguage</label>
