
@model BookModel;


@{
    ViewData["Title"] = "AddBook";
    
}

<div class = "container">

    <h3 class = "display-4">Add New Book</h3>
    <div class = "form-group">
        @if(ViewBag.issuccess == true)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
              <strong>Congratulations!</strong> Book Data Stored Successfully, <a asp-controller = "Book" asp-action = "GetBook" asp-route-id = "@ViewBag.Id" >Click</a> to See Data
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
        }


        @*Spinner for ajax*@
