<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"] | Facebook</title>
    <link rel = "stylesheet" href = "~/css/Style.css" />
    
    <link rel = "stylesheet" href = "~/lib/twitter-bootstrap/css/bootstrap.css" />


    

    <environment exclude = "Development">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.4/css/bootstrap.min.css" integrity="" crossorigin="anonymous">
        <link rel = "stylesheet" asp-fallback-href = "~/lib/twitter-bootstrap/css/bootstrap.css"
        
        asp-fallback-test-class = "sr-only"
        asp-fallback-test-property = "position"
        asp-fallback-test-value = "absolute"
        
        />

        

    </environment>


</head>
<body >
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" href="/">
                    <img src="~/images/Facebooklogo.png" width="50" height="30" asp-append-version = "true" />
                    Facebook Store
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="btn btn-outline-primary">Login</a>
                            <a class="btn btn-primary">Register</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/home/aboutus">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/home/contactus">Contact</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/book/getallbooks">Book List</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller = "book" asp-action = "AddBook">Add Book</a>
                        </li>

                        

                        

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main role="main">
        @RenderBody()
    </main>
    <br /><br /><br /><br />

    <footer class="border-top footer text-muted text-center">
        <div class="container">
            Copyright  &copy; Book Store @DateTime.Now.Year
            <custom-email contact = "sarbajyoti123@gmail.com"></custom-email>
            
        </div>
    </footer>
</body>
<script src = "~/lib/jquery/jquery.js"> </script>
<script src = "~/jquery-validate/jquery.validate.js"></script>
<script src = "~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"> </script>
<script src = "~/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.js"> </script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>

</html>

